@using InventoryManagement.Models;
@using System.Data;

@{
    ViewBag.Title = "Dashboard";
}

<script>
    
    $(window).on('beforeunload', function () {
        Swal.fire({
            title: 'Loading Dashboard...',
            text: 'Please wait while the dashboard loads',
            allowOutsideClick: false,
            showConfirmButton: false,
            willOpen: () => {
                Swal.showLoading();
            }
        });
    });

    
    $(window).on('load', function () {
        Swal.close();
    });
</script>

<style>
    .cart-sidebar {
        position: fixed;
        top: 0;
        right: -300px;
        width: 300px;
        max-height: calc(100vh - 60px);
        background-color: white;
        box-shadow: -2px 0 5px rgba(0, 0, 0, 0.5);
        transition: right 0.3s;
        z-index: 1000;
        padding: 15px;
        overflow-y: auto;
    }

        .cart-sidebar.open {
            right: 0;
        }

    .cart-sidebar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>


<script src="~/Scripts/CustomScript/productService.js"></script>
<script src="~/Scripts/CustomScript/productController.js"></script>

<script>
    $(document).ready(function () {
        $('#cart-icon').click(function () {
            $('#cart-sidebar').addClass('open');
            var currentCart = getCart();
            console.log("Current cart when opening sidebar: ", currentCart);

            updateCartView(currentCart);
        });
        $('#close-cart-sidebar').click(function () {
            $('#cart-sidebar').removeClass('open');
        });
    });
</script>



