@using InventoryManagement.Models;
@using System.Data;

@{
    ViewBag.Title = "Dashboard";
}

<script>
    function showEquipmentEntryPanel() {
        $("#dvPartialEntryPanel").dialog({
            resizable: false,
            height: 500,
            width: 1000,
            modal: true
        });
        return false;  // to prevent post-back
    }
</script>


<!--Card-->
